{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./build/tests",
    "rootDir": ".",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": false
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build/tests",
    "build/browser-tests"
  ]
}
